<UserControl x:Class="AnimalShelterMgmt.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="40">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

            <TextBlock Text="Profil" FontSize="32" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel>
                <TextBlock Text="Felhasználónév:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Username}" IsReadOnly="True" Margin="20,0,20,0"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Email cím:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email}" Margin="20,0,20,15"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Szerepkör:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox Name="RoleComboBox" Width="200" Margin="5">
                    <ComboBoxItem Content="Foster"/>
                    <ComboBoxItem Content="Owner"/>
                </ComboBox>
            </StackPanel>

            <Button Content="Mentés"
                    Width="150"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0"
                    Click="SetUserRole_Click"
                    />
        </StackPanel>
    </Grid>
</UserControl>
